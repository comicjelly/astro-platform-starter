---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <style>
    /* Custom Styles */
    :root {
      --primary: #ff9800;
      --primary-dark: #e68900;
      --secondary: #2e7d32;
      --light: #f8f9fa;
      --dark: #333;
    }
    
    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
      position: relative; /* Needed for the background element */
    }

    /* --- Logo Watermark Background --- */
    body::before {
      content: "";
      position: fixed; /* Fixes image in place while scrolling */
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      
      /* Uses your logo */
      background-image: url('../../logo2.png'); 
      
      /* Positioning */
      background-repeat: no-repeat;
      background-position: center center;
      background-size: 40%; /* Adjust size of logo */
      
      /* The Magic Part: Make it faint */
      opacity: 0.05; /* Very subtle (5% visibility) */
      z-index: -1; /* Puts it behind the text */
    }
    
    .hero {
      background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('images/lions2.jpg') no-repeat center center/cover;
      min-height: 100vh;
      display: flex;
      align-items: center;
      color: white;
    }
    
    .section-title {
      position: relative;
      margin-bottom: 2rem;
      font-weight: 700;
      display: inline-block;
    }
    
    .section-title::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 0;
      right: 0;
      transform: none;
      width: 100%;
      height: 3px;
      background-color: var(--primary);
    }

    section, header {
  /* This pushes the scroll anchor down by the height of your navbar */
  scroll-margin-top: 80px; 
}

    /* Center all h2 elements site-wide */
    h2 {
      text-align: center;
      margin-left: auto;
      margin-right: auto;
    }

    /* Center text in every section and header except the Car Hire section */
    header, section:not(#car-hire) {
      text-align: center;
    }
    
    .tour-card, .trust-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      height: 100%;
      /* Make cards slightly transparent so background shows through slightly */
      background-color: rgba(255, 255, 255, 0.95);
    }
    
    .tour-card:hover, .trust-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    
    .tour-card {
      border-top: 4px solid var(--primary);
    }
    
    .trust-card {
      border-top: 4px solid var(--secondary);
    }
    
    .btn-primary {
      background-color: var(--primary);
      border-color: var(--primary);
    }
    
    .btn-primary:hover {
      background-color: var(--primary-dark);
      border-color: var(--primary-dark);
    }
    
    .btn-outline-primary {
      color: var(--primary);
      border-color: var(--primary);
    }
    
    .btn-outline-primary:hover {
      background-color: var(--primary);
      border-color: var(--primary);
      color: white;
    }
    
    .booking {
      /* Made transparent so body background shows, or keep light grey */
      background-color: rgba(248, 249, 250, 0.9);
    }
    
    .trust-icon {
      font-size: 2.5rem;
      color: var(--secondary);
      margin-bottom: 1rem;
    }
    
    .social-icon {
      font-size: 1.5rem;
      margin: 0 10px;
      color: white;
      transition: color 0.3s ease;
    }
    
    .social-icon:hover {
      color: var(--primary);
    }

    .tour-card img {
      height: 250px;
      width: 100%;
      object-fit: cover;
    }

    .gorilla-img { object-position: center top; }
    .hippo-img { object-position: center bottom; }
    
    /* Ensure sections have semi-transparent backgrounds to readable text */
    section.bg-light {
        background-color: rgba(248, 249, 250, 0.9) !important;
    }

    /* Glassmorphism Navbar */
    .glass-navbar {
      background: rgba(255,255,255,0.06);
      border-bottom: 1px solid rgba(255,255,255,0.12);
      transition: background-color 0.3s ease, box-shadow 0.3s ease, padding 0.3s ease;
      padding: 0.6rem 1rem;
    }

    .glass-navbar .navbar-brand,
    .glass-navbar .nav-link,
    .glass-navbar .social-icon {
      color: #fff !important;
      transition: color 0.3s ease;
    }

    .glass-navbar .navbar-toggler {
      border: 1px solid rgba(255,255,255,0.16);
      transition: border-color 0.3s ease;
    }

    .glass-navbar .navbar-toggler-icon {
      filter: invert(1) brightness(4);
    }

    .glass-navbar.scrolled {
      background: rgba(255,255,255,0.97);
      box-shadow: 0 6px 20px rgba(17, 24, 39, 0.12);
      border-bottom: 1px solid rgba(0,0,0,0.06);
      padding: 0.35rem 1rem;
    }

    .glass-navbar.scrolled .navbar-brand,
    .glass-navbar.scrolled .nav-link,
    .glass-navbar.scrolled .social-icon {
      color: #0b1220 !important;
    }

    .glass-navbar .nav-link:hover {
      color: var(--primary) !important;
    }

    /* Additional Styling for Gallery Images */
    .car-gallery-img {
      cursor: pointer;
      transition: opacity 0.2s;
    }
    .car-gallery-img:hover {
      opacity: 0.9;
    }

    /* Reveal animations */
    .reveal {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.6s ease, transform 0.6s ease;
      will-change: opacity, transform;
    }
    .reveal.in-view {
      opacity: 1;
      transform: none;
    }
    .reveal.delay-1 { transition-delay: 80ms; }
    .reveal.delay-2 { transition-delay: 160ms; }
    .reveal.slide-left { transform: translateX(-18px); }
    .reveal.slide-right { transform: translateX(18px); }

    /* Form focus / filling styles */
    .form-control:focus, .form-select:focus, textarea.form-control:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 0.15rem rgba(255,152,0,0.12);
      outline: none;
      transition: box-shadow 0.2s ease, border-color 0.2s ease;
    }
    .form-control.filled, .form-select.filled, textarea.form-control.filled {
      border-color: var(--primary);
    }

    /* Navbar active underline */
    .navbar .nav-link { position: relative; }
    .navbar .nav-link.active::after {
      content: '';
      position: absolute;
      left: 0; right: 0; bottom: -8px;
      height: 3px; background: var(--primary); border-radius: 3px;
      display: block;
    }
  </style>


---
import Layout from '../layouts/Layout.astro';
---

<Layout>

  <!-- Paste your custom <style> block here (or move to Layout or external file) -->
  <style is:global>
    :root {
      --primary: #ff9800;
      --primary-dark: #e68900;
      --secondary: #2e7d32;
      --light: #f8f9fa;
      --dark: #333;
    }

    html { scroll-behavior: smooth; }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
      position: relative;
    }

    body::before {
      content: "";
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background-image: url('/logo2.png');   /* ← changed from ../../logo2.png */
      background-repeat: no-repeat;
      background-position: center center;
      background-size: 40%;
      opacity: 0.05;
      z-index: -1;
    }

    /* ... paste ALL your other custom CSS rules here ... */
    /* including .hero, .section-title, .tour-card, .glass-navbar, etc. */
  </style>

  <header id="home" class="hero reveal">
    <div class="container text-center">
      <h1 class="display-2 fw-bold mb-4">The Full Experience</h1>
      <p class="lead mb-4 fw-medium text-white-50">Enjoy the Best Tour and Travel — Gorilla Tracking, Boat Cruises, & Safaris</p>
      <a href="#inquiry" class="btn btn-primary btn-lg px-5 py-3 fw-bold shadow text-center">Plan My Trip</a>
    </div>
  </header>

  <!-- Paste the rest of your sections: #about, #tours, #car-hire, #trust, testimonials, #inquiry -->

  <!-- They remain almost 100% identical HTML -->

</Layout>
